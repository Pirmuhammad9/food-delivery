<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemCategory"
    style="@style/ItemCategoryRoot">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemIcon"
        style="@style/ItemCategoryIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_menu" />

    <TextView
        app:layout_constraintBottom_toTopOf="@id/itemCount"
        android:id="@+id/itemName"
        style="@style/ItemCategoryName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/full_names" />

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/itemCount"
        style="@style/ItemCategoryItems"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/itemName"
        app:layout_constraintTop_toBottomOf="@id/itemName"
        tools:text="8 Items" />

</androidx.constraintlayout.widget.ConstraintLayout>