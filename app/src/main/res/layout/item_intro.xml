<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ItemIntroRoot">

    <TextView
        android:id="@+id/textTitle"
        style="@style/ItemIntroTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Create an account" />

    <TextView
        android:id="@+id/textSubtitle"
        style="@style/ItemIntroSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        tools:text="Fresh Food" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageIntro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_intro1"
        style="@style/ItemIntroImage" />

    <TextView
        android:id="@+id/textDescription"
        style="@style/ItemIntroDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageIntro"
        tools:text="@string/text_intro_description1" />

</androidx.constraintlayout.widget.ConstraintLayout>